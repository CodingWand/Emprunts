{% block titre_page %}Emprunts{% endblock %}
{% block content %}
    <h1 style="color: #3F51B5">Salut {{ user.firstName }} !</h1>
    <hr>

    <p>Tu as emprunt√© :</p>
    {% for borrowing in user.borrowed %}
        <section>
            <h2>{{ borrowing.equipment.name }}</h2>
            <p>A rendre le {{ borrowing.endedOn | date("d/m/Y") }}</p>
