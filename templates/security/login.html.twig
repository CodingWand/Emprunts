{% extends "base.html.twig" %}

{% block titre_page %}Emprunts{% endblock %}

{% block content %}
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("security_login") }}" method="post">
        <div class="form-group">
            <input class="form-control" placeholder="Adresse email" required name="_username" type="text"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Mot de passe" required name="_password"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </form>
{% endblock %}