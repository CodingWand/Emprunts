{% extends "base.html.twig" %}

{% block titre_page %}Emprunts{% endblock %}

{% block content %}
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path("security_login") }}" method="post">
        <div class="form-group">
            <input class="form-control" placeholder="Nom d'utilisateur" required name="_username" type="text"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Mot de passe" required name="_password"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" style="margin-bottom: 10px;">Se connecter</button><br />
            <a href="{{ path("user_login") }}"><button type="button" class="btn btn-secondary" style="margin-bottom: 10px;" >Se connecter avec MyCentraleAssos</button><br /></a>
            <span>Tu n'as pas de compte ? Inscris-toi <a href="{{ path('security_registration') }}">ici</a>.</span>
        </div>
    </form>
{% endblock %}